%h2 Edit #{ resource_name.to_s.humanize }
= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = f.semantic_errors
  = f.inputs :name => "Base information" do
    = f.input :username, hint: "Enter your username"
    = f.input :email, hint:"Enter your email address"
    = f.input :password, hint:"Enter new password (leave blank if you don't want to change it)"
    = f.input :password_confirmation, hint:"Confirm new password"
    = f.input :current_password, hint:"Enter current password (we need your current password to confirm your changes)"
  = f.inputs :name => 'Additional information' do
    = f.input :gender
    = f.input :location, hint: "For example: Warsaw, Poland"
  = f.actions(:submit, :button_html => {:class => "primary"})

%h3 Cancel my account

%p Unhappy? #{ link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete }

= link_to "Back", :back
