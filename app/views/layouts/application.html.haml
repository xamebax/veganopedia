!!!
%html
  %head
    %title Veganopedia
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %body
    .container
      .navigation
        - semantic_navigation :main, :html => { :class => 'nav nav-tabs' } do |n|
          -# = n.group 'Media' do
          = n.item 'Users', :link => users_path
          = n.item "My profile", :link => user_path(current_user) if user_signed_in?
          = n.item 'Log in', :link => new_user_session_path
          = n.item 'Log out', :link => { :controller => 'devise/sessions', :action => 'destroy' }#, :method => :delete
      - if current_user
        = render :partial => 'layouts/flash', :locals => { :flash => flash }
        -# = render_navigation #:expand_all => true, :renderer => Bootstrap
      = yield
